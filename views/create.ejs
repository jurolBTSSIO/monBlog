<!DOCTYPE html>
<html lang="en">
<%- include('layouts/header');-%>
<style>
    body {
        background-color: #fdfafb;
    }

    img {
        height: 250px;
        border-radius: 10px;
        border: solid 1px #000;
        box-shadow: 5px 5px 5px rgb(0, 0, 0, 0.5);
        transition: transform 2s ease;
    }

    .white {
        background-color: #fff;
    }

    img:hover {
        transform: rotate(360deg);
    }
</style>

<body>
    <%- include('layouts/navbar');-%>
    <!-- Page Header -->
    <header class="masthead" style="background-image: url('/img/contactbg.jpg')">
        <div class="overlay"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-md-10 mx-auto mb-4">
                    <div class="page-heading">
                        <h1>Create New Post</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto border white shadow p-3 mb-4">
                <form action="/posts/store" method="POST" enctype="multipart/form-data">
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Title</label>
                            <input type="text" class="form-control" placeholder="Title" id="title" name="title">
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Description</label>
                            <textarea rows="5" class="form-control" id="body" name="body"></textarea>
                            <script>
                                $('#body').summernote({
                                    placeholder: 'Hello Bootstrap 4',
                                    tabsize: 2,
                                    height: 100
                                });
                            </script>
                        </div>
                    </div>
                    <div class="control-group">
                        <div class="form-group floating-label-form-group controls">
                            <label>Image</label>
                            <input type="file" class="form-control" id="image" name="image"
                                enctype="multipart/form-data">
                        </div>
                    </div>
                    <br>
                    <div id="success"></div>
                    <button type="submit" class="btn btn-primary" id="sendMessageButton">Send</button>
                </form>
            </div>
        </div>
    </div>
    <%- include('layouts/footer');-%>
    <%- include('layouts/scripts');-%>
</body>

</html>